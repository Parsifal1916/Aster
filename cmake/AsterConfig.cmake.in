@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

find_dependency(OpenGL REQUIRED)
find_dependency(GLEW REQUIRED)
find_dependency(glfw3 REQUIRED)
find_dependency(OpenCL REQUIRED)
find_dependency(Threads REQUIRED)

include(FetchContent)

if(NOT TARGET TBB::tbb)
    set(BUILD_SHARED_LIBS ON CACHE BOOL "Build oneTBB as shared" FORCE)
    
    FetchContent_Declare(
        TBB
        GIT_REPOSITORY https://github.com/oneapi-src/oneTBB.git
        GIT_TAG        v2021.12.0
    )
    
    set(TBB_BUILD_TESTS OFF CACHE BOOL "Disable TBB tests" FORCE)
    set(TBB_BUILD_TBBMALLOC OFF CACHE BOOL "Disable tbbmalloc" FORCE)
    set(TBB_BUILD_TBBMALLOC_PROXY OFF CACHE BOOL "Disable tbbmalloc_proxy" FORCE)
    set(TBB_EXAMPLES OFF CACHE BOOL "Disable TBB examples" FORCE)
    set(TBB_STRICT OFF CACHE BOOL "Disable TBB strict mode" FORCE)
    
    FetchContent_MakeAvailable(TBB)
endif()

include("${CMAKE_CURRENT_LIST_DIR}/AsterTargets.cmake")

check_required_components(Aster)